//Version 1.2 (auth part 2)
#include<iostream>
using std::cout;
using std::cin;
using std::string;
using std::endl;

string menu_selection;
string num_one = "1";
string num_two = "2";
string info_game = "/info-game";
//Second menu input comparator
void menu_comp() {
    if(menu_selection == num_one) {
        cout << "\nGame coming soon :O";
    } else if(menu_selection == num_two) {
        cout << "\n- Session ended";
    } else if(menu_selection == "/info-game") {
        cout << "No games currently available. Coming soon\n";
    }else if(menu_selection.find(info_game)){
        cout << "\n\'/info-game\' did you mean?";
    } else {
        cout << "\n[Error \'" + menu_selection + "\' Incorrect. Try again1]";
    }
}
void menu() {
    cout << "Menu\n";
    cout << "[1] : Game\n";
    cout << "[2] : Exit\n";
    cout << "Type \'/info-game\' for game details\n";
    cout << "Enter [1/2] to select: ";

    getline(cin, menu_selection);
    if(menu_selection.empty()) {
        cout << "\nInput can't be empty, try again";
    } else if(menu_selection.length() == 2) {
        cout << "\n[Error \'" + menu_selection + "\' Incorrect. Try again]";
    } else if(menu_selection.length() >= 11) {
        string error_length = menu_selection.substr(0,8);
        cout << "\n[Error \'" << error_length << "...\'" << " Incorrect. Try again]";
    } else {
        menu_comp();
    }
}

int main() {
    menu();
    return 0;
}
