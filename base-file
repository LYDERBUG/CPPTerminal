#include<iostream>
using std::cout;
using std::cin;
using std::string;
using std::endl;

string menu_selection;
string num_one = "1";
string num_two = "2";

void menu() {
    cout << "Menu\n";
    cout << "[1] : Game\n";
    cout << "[2] : Exit\n";
    cout << "Type \'/info-game\' for game details\n";
    cout << "Enter [1/2] to select: ";
    cin >> menu_selection;

    if(menu_selection == num_one) {
        cout << endl;
        cout << "Game coming soon :O";
    } else if(menu_selection == num_two) {
        cout << "- Session ended\n";
    } else {
        cout << "\n";
        cout << "[Error \'" + menu_selection + "\' Incorrect. Try again]";
    }
}

int main() {
    menu();
    return 0;
}
